<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:complexType name="fieldType">
        <xs:annotation>
            <xs:documentation>
                "Convert" fields to datasources
            </xs:documentation>
        </xs:annotation>

        <xs:attribute
            type="xs:string" name="name" use="required" />
        <xs:attribute
            type="xs:string" name="column" use="optional" />
        <xs:attribute
            type="xs:string" name="jsonpath" use="optional" />
        <xs:attribute name="type" use="optional">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="integer"/>
                    <xs:enumeration value="boolean"/>
                    <xs:enumeration value="string"/>
                    <xs:enumeration value="float"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute
            type="xs:string" name="regex" use="optional" />
        <xs:attribute
            type="xs:string" name="split" use="optional" />
        <xs:attribute
            type="xs:string" name="dateFormat" use="optional" />
        <xs:attribute
            type="xs:string" name="join" use="optional" />
        <xs:attribute
            type="xs:string" name="template" use="optional" />
        <xs:attribute
            type="xs:string" name="script" use="optional" />
        <xs:attribute name="transform" use="optional">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:enumeration value="json"/>
                    <xs:enumeration value="csv"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
        <xs:attribute type="xs:string" name="headers" use="optional" />
    </xs:complexType>

    <xs:complexType name="entityType">
        <xs:annotation>
            <xs:documentation>
                Entity
            </xs:documentation>
        </xs:annotation>

        <xs:sequence>
            <xs:element name="query" minOccurs="0" maxOccurs="1">
                <xs:complexType>
                    <xs:simpleContent>
                        <xs:extension
                            base="xs:string">
                            <xs:attribute
                                type="xs:string" name="target" use="optional" />
                        </xs:extension>
                    </xs:simpleContent>
                </xs:complexType>
            </xs:element>

            <xs:element name="field" type="fieldType" minOccurs="0" maxOccurs="unbounded" />

            <xs:element name="entity" type="entityType" minOccurs="0" maxOccurs="unbounded" />
        </xs:sequence>

        <xs:attribute type="xs:string" name="name" use="required" />
        <xs:attribute type="xs:string" name="datasource" use="required" />
        <xs:attribute type="xs:string" name="query" use="optional" />

    </xs:complexType>

  <xs:element name="plan">
    <xs:complexType>
      <xs:sequence>

        <xs:element name="inputs" minOccurs="0" maxOccurs="1">
            <xs:annotation>
                <xs:documentation>
                    Inputs required for this import handler to run
                </xs:documentation>
            </xs:annotation>
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="param" maxOccurs="unbounded"
                        minOccurs="0">
                        <xs:complexType>
                            <xs:simpleContent>
                                <xs:extension base="xs:string">
                                    <xs:attribute type="xs:string"
                                        name="name" use="optional" />
                                    <xs:attribute type="xs:string"
                                        name="type" use="optional" />
                                </xs:extension>
                            </xs:simpleContent>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:complexType>
        </xs:element>

        <xs:element name="script" minOccurs="0" maxOccurs="unbounded">
            <xs:annotation>
                <xs:documentation>
                    Used to define Javascript functions that can be used to transform data
                </xs:documentation>
            </xs:annotation>
            <xs:complexType>
                <xs:simpleContent>
                    <xs:extension base="xs:string">
                        <xs:attribute type="xs:string" name="src" use="optional"/>
                    </xs:extension>
                </xs:simpleContent>
            </xs:complexType>
        </xs:element>

        <xs:element name="datasources" minOccurs="1" maxOccurs="1">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="db" minOccurs="0" maxOccurs="unbounded">
                        <xs:annotation>
                            <xs:documentation>
                                Define data sources to be used. Data
                                sources
                            </xs:documentation>
                        </xs:annotation>
                        <xs:complexType>
                            <xs:simpleContent>
                                <xs:extension base="xs:string">
                                    <xs:attribute type="xs:string" name="name" use="required"/>
                                    <xs:attribute type="xs:string" name="host" use="required"/>
                                    <xs:attribute type="xs:string" name="dbname" use="required"/>
                                    <xs:attribute type="xs:string" name="username" use="required"/>
                                    <xs:attribute type="xs:string" name="password" use="required"/>
                                    <xs:attribute type="xs:string" name="vendor" use="required"/>
                                </xs:extension>
                            </xs:simpleContent>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="pig" minOccurs="0" maxOccurs="unbounded">
                        <xs:complexType>
                            <xs:attribute type="xs:string"
                                name="name" use="required" />
                            <xs:attribute type="xs:string"
                                name="connection" use="required" />
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:complexType>
        </xs:element>

        <xs:element name="import" maxOccurs="1" minOccurs="1">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="entity" type="entityType" minOccurs="0" maxOccurs="unbounded" />
                </xs:sequence>
            </xs:complexType>
        </xs:element>

        <xs:element name="predict" minOccurs="0" maxOccurs="1">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="model" minOccurs="0" maxOccurs="unbounded">
                        <xs:complexType>

                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:complexType>
        </xs:element>

      </xs:sequence>
      <xs:attribute type="xs:string" name="type"/>
    </xs:complexType>
  </xs:element>

</xs:schema>